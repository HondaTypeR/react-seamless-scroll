{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rules": {
    "no-console": false,
    "object-literal-sort-keys": false,
    "member-access": false,
    "ordered-imports": false,
    "interface-name" : [true, "never-prefix"],
    "jsdoc-format": false,
    "no-bitwise": false,
    "curly": false
  },
  "linterOptions": {
    "exclude": ["**/*.json", "node_modules"]
  }
}
